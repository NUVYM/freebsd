{
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "us-east-1",
            "availability_zone": "us-east-1a",
            "iam_instance_profile": "nuvym_ec2_role",
            "associate_public_ip_address": true,
            "launch_block_device_mappings": [
              {
                 "device_name": "/dev/sdb",
                 "encrypted": false,
                 "delete_on_termination": true,
                 "throughput": 500,
                 "iops": 3000,
                 "volume_type": "gp3",
                 "volume_size": "30"
              }
            ],
            "source_ami_filter": {
              "filters": {
              "virtualization-type": "hvm", 
              "name": "State Of The Art FreeBSD*",
              "architecture": "x86_64"
              },
              "owners": ["aws-marketplace"],
              "most_recent": true
           },
            "ami_name": "freebsd13-{{timestamp}}",
            "tags": {
              "OS_Version": "FreeBSD-13",
              "Release": "Latest"
            },
            "instance_type": "t3.xlarge",
            "ena_support": true,
            "communicator": "ssh",
            "ssh_username": "ec2-user",
            "ssh_port": "22",
            "ssh_private_key_file": "/devops/keys/sandbox.pem",
            "ssh_keypair_name": "test",
            "ssh_timeout": "5m",
            "ssh_pty": true, 
            "ssh_interface": "public_ip", 
            "ssh_ciphers": "aes256-ctr,aes192-ctr,aes128-ctr,ecdsa-sha2-nistp256",
            "user_data_file": "freebsd13-hardening.sh",
            "security_group_filter": {
              "filters": {
                "tag:Name": "sandbox-sg" 
              }
          },
          "subnet_filter": {
            "filters": {
              "tag:Name": "sandbox-a"
            }
          },
          "vpc_filter": {
            "filters": {
              "tag:Name": "sandbox-vpc"
            }
          }
          }         
      ],   
      "provisioners": [
        {
          "type": "shell",
          "inline": [
            "echo Sucessfully created"
          ]
        }
      ]
    }      